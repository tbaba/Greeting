!!!
%html
  %head
    %title Greeting
    %script{:src => "//connect.facebook.net/ja_JP/all.js"}
    %script{:src => "//code.jquery.com/jquery-1.6.3.min.js"}
    %script{:src => "jquery.pajinate.min.js"}
    %script{:src => "facebox.js"}
    %script{:src => "application.js"}
    %link{:href => "application.css", :rel => "stylesheet"}/
    %link{:href => "facebox.css", :rel => "stylesheet"}/
  %body
    #fb-root
    #friends-selector{:style => "display:none;"}
      %h2 select friends
      .user-friends
        .page_navigation
        %ul.content
    #me
    %p#login
      %a{:href => "javascript:void(0);", :id => 'login-button'} Login
    %p#logout
      %a{:href => "javascript:void(0);", :id => 'logout-button'} Logout
    %p#show_friends
      %a.get_friends{:href => "#friends-selector", :rel => "facebox"} Select Friends
    #friends-selected
    #message
    %form{:action => ""}
      %p
        %input#url{:name => "url", :type => "text"}/
      %p
        %a#send-message{:href => "javascript:void(0);"} Send URL
